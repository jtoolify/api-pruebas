// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String @default("user") // Rol del usuario
}

model Character {
  id          Int    @id @default(autoincrement())
  name        String
  species     String
  gender      String
  image       String
  createdAt   DateTime @default(now())
}
